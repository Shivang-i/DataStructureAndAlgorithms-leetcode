class Solution {
    public boolean canJump(int[] nums) {
        int n = nums.length;

        // dp[i] will be true if we can reach the last index from index i
        boolean dp[] = new boolean[n];

        // The last index can always reach itself
        dp[n - 1] = true;

        // Iterate from second last index to the first index
        for (int i = n - 2; i >= 0; i--) {
            // Check all possible jumps from current position i
            for (int j = 1; j <= nums[i]; j++) {
                // If any jump leads to a position from which we can reach the end
                if (dp[i + j] == true) {
                    dp[i] = true; // Mark current index as reachable
                    break;       // No need to check further jumps from this index
                }
            }
        }

        // Return whether we can reach the last index starting from index 0
        return dp[0];
    }
}
