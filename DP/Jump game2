class Solution {
    public int jump(int[] nums) {
        int n = nums.length;
        // dp[i] stores minimum jumps needed to reach the end from index i
        int dp[] = new int[n];
        
        // Initialize dp array with a large number
        for(int i = 0; i < n; i++) {
            dp[i] = Integer.MAX_VALUE;
        }
        
        // Last index needs 0 jumps to reach itself
        dp[n - 1] = 0;

        // Fill dp array from second last index to the start
        for(int i = n - 2; i >= 0; i--) {
            // Check all jumps from current index
            for(int j = 1; j <= nums[i] && i + j < n; j++) {
                if(dp[i + j] != Integer.MAX_VALUE) {
                    dp[i] = Math.min(dp[i], 1 + dp[i + j]);
                }
            }
        }

        // Minimum jumps needed from index 0
        return dp[0];
    }
}
