//leetcode -342
class Solution {
    public boolean isPowerOfFour(int n) {
        // If n is exactly 1, it's a power of 4 (4^0 = 1)
        if (n == 1)
            return true;

        // If n is non-positive or not divisible by 4, 
        // it can't be a power of 4
        if (n <= 0 || n % 4 != 0) 
            return false;

        // Recursively divide n by 4 and check again.
        // If n keeps dividing evenly by 4 until it becomes 1,
        // then it's a power of 4.
        return isPowerOfFour(n / 4);
    }
}
